{
  "manifest_version": 3,
  "name": "Menhir Capture",
  "version": "0.1.0",
  "description": "Captures web content and sends it to the Menhir app.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>", "http://localhost:*/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
